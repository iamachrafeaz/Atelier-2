<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.0">

    <persistence-unit name="default" transaction-type="RESOURCE_LOCAL">
        <class>ma.fstt.shoplite.entities.User</class>
<!--        <class>ma.fstt.shoplite.entities.Category</class>-->
        <class>ma.fstt.shoplite.entities.Product</class>
        <class>ma.fstt.shoplite.entities.Cart</class>
        <class>ma.fstt.shoplite.entities.CartItem</class>
        <class>ma.fstt.shoplite.entities.Order</class>
        <class>ma.fstt.shoplite.entities.OrderItem</class>

        <properties>
            <!-- JDBC Configuration -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/yourDBName"/>
            <property name="jakarta.persistence.jdbc.user" value="DBUsername"/>
            <property name="jakarta.persistence.jdbc.password" value="DBPassword"/>

            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="both"/>
            <property name="eclipselink.create-ddl-jdbc-file-name" value="create.sql"/>
            <property name="eclipselink.drop-ddl-jdbc-file-name" value="drop.sql"/>

            <!-- SQL Logging -->
            <property name="eclipselink.logging.level" value="FINE"/> <!-- or FINER for more detail -->
            <property name="eclipselink.logging.level.sql" value="FINE"/> <!-- Logs SQL statements -->
            <property name="eclipselink.logging.parameters" value="true"/> <!-- Logs parameter bindings -->
            <property name="eclipselink.logging.logger" value="DefaultLogger"/> <!-- Console output -->

        </properties>

    </persistence-unit>
</persistence>
